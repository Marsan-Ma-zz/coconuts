<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<!-- language -->
<meta name="application-name" content=<%= Setting.app_name %> />
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

<!-- Gem: meta-tags for SEO -->
<%= display_meta_tags :site => Setting.app_name %>
<% if @post %>
  <link rel="image_src" href="<%= @post.thumbnail %>" />
<% elsif @feature %>
  <link rel="image_src" href="<%= @feature.thumbnail %>" />
<% end %>

<!-- RSS feed -->
<link rel="alternate" type="text/xml" title="RSS .92" href=<%= "http://#{Setting.domain}/rss/wiredtw" %>/>

<!-- tell mobile device no need to scale -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<% if mobile? %>
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta content='True' name='HandheldFriendly' />
<% end %>

<!-- basics -->
<%= yield(:head) %>
<link href="http://fonts.googleapis.com/css?family=Arimo:regular ,italic,bold,bolditalic" rel="stylesheet" type="text/css">
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Cutive+Mono' rel='stylesheet' type='text/css'>
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
<%= stylesheet_link_tag "application", :media => "all" %>
<%= csrf_meta_tags %>

