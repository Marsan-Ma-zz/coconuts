<h1>Listing users</h1>

<!-- Filter -->
<form action='/cpanel/users' method='get' target='_top'>
  <input name="name" placeholder="輸入欲搜尋的人名" value="<%= params[:name] %>" type="text">
  <input type='submit' value="Filter" class='btn' style="margin-bottom: 10px;"/>
</form>

<table class="table table-bordered table-striped table-condensed">
  <tr class="head">
    <td class="first">Id</td>
    <td>Avatar</td>
    <td>Name</td>
    <td>Login</td>
    <td>Email</td>
    <td>Location</td>
    <td>Is Admin</td>
    <td>Is Editor</td>
    <td>Edit</td>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class="first"><%= user.id %></td>
    <td><%= get_avatar(user) %></td>
    <td><%= user.name %></td>
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= user.location %></td>
    <td><%= user.admin? ? "是" : "" %></td>
    <td><%= user.editor? ? "是" : "" %></td>
    <td><%= link_to('Edit', edit_cpanel_user_path(user), :class => "btn small_edit") %></td>
  </tr>
<% end %>
</table>
<%= paginate @users %>
<br />

<%= link_to 'New User', new_cpanel_user_path, :class => "btn btn-primary" %>
