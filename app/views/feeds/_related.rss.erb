<!-- Post content -->
<pre style="white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word;">
  <%= raw(post.content) %>
</pre>

<!-- Copyright -->
<small style="color: #666; font-size: 12px; display: inline-block; margin: 0;">
  <% post.cites.each do |i| %>
    <%= raw("#{cap_first(i.source)} by #{link_to(i.name, i.url, :target => "_blank")}") if not i.name.empty? %><br>
  <% end %>
</small>

<!-- Extend reading -->
<br><hr style="border-top: 1px solid ">
<div>
  <h3 style="margin: 4px 0">Wired為您推薦：</h3>
  <table style="table-layout:fixed; clear: both; text-decoration: none;">
    <tr>
    <% related_posts.each do |i| %>
      <td valign="top" style="padding: 2px; width: 20%; border-left: 1px solid #ccc">
        <a href=<%= post_url(i.slug) %>>
          <div style="background: url('<%= i.thumbnail %>') no-repeat center/auto 100%; height: 100px; margin: 5px 0;"></div>
          <%= trim(i.title, 50) %>
        </a>
      </td>
    <% end %>
    </tr>
  </table>
</div>


